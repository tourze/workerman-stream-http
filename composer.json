{
  "name": "tourze/workerman-stream-http",
  "description": "Workerman的另一个HTTP协议实现",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "nyholm/psr7": "^1.8.2",
    "psr/http-message": "^1.1 || ^2.0",
    "tourze/enum-extra": "0.1.*",
    "workerman/workerman": "^5.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\Workerman\\StreamHTTP\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\Workerman\\StreamHTTP\\Tests\\": "tests"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse src -l 1",
    "test": "phpunit"
  }
}